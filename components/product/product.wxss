/* components/product/product.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.com-widget-shoppingcard { 

    position: fixed; 

    bottom: 30%; 

    right: 5px; 

    background: rgba(0,0,0,0.48); 

    border-radius: 50%; 

    overflow: hidden; 

    z-index: 500; 
} 

.com-widget-shoppingcard .icon-shoppingcard{ 

    display: inline-block; 

    width: 50px; 

    height: 50px; 

    color: #ffffff; 

    text-align: center; 

    border-radius: 50%; 

    -webkit-background-size: 50px auto; 
}