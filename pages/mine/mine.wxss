/* pages/mine/mini.wxss */

.UCenter-bg {  
  background-color: rgb(255, 94, 0);	
  background-size: cover;
  height: 240rpx;
  display: flex;
  justify-content: flex-start;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: row;
  align-items: flex-start;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

